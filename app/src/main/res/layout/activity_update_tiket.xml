<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/warna_background"
    tools:context=".view.updatetiket.UpdateTiketActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvArraowDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg_second"
        android:outlineAmbientShadowColor="@color/warna_button"
        android:outlineSpotShadowColor="@color/warna_button"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackDetail"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Edit Tiket"
        android:textAlignment="center"
        android:textColor="@color/warna_primary_font"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etArriveUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="arrive"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout9"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_bg"
        android:padding="5dp"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:layout_marginStart="10dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout1"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTakeOffUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Take Off"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etClassUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Class"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDepartureUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Departure"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDepartureCodeUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Departure Code"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:padding="5dp"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/warna_primary_font"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout6"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDestinationUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Destination"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDestinationCodeUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Destination Code"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etJenisTiketUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Jenis Penerbangan (Domestic / International)"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout8"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPriceUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Harga"
            android:inputType="number"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etChairUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Total Kursi"
            android:inputType="number"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout11"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg"
        android:textColor="@color/warna_primary_font"
        android:textColorHint="@color/warna_primary_font"
        app:boxStrokeColor="@color/warna_background"
        app:boxStrokeWidth="0dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        app:hintTextColor="@color/warna_primary_font"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout10"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
        app:shapeAppearanceOverlay="@style/Button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTypeUpdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Type"
            android:inputType="text"
            android:textColor="@color/warna_primary_font"
            android:textColorHint="@color/warna_primary_font"
            android:textSize="10sp"
            android:textStyle="normal"
            app:boxStrokeWidth="0dp"
            tools:ignore="SmallSp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnUpdateTiket"
        style="@style/firstbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Tambah Tiket"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>